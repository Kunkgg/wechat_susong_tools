<!--pages/counsel_fee/counusel_fee.wxml-->
<view class="page">
    <view class="page__hd">
        <text class="page__title">律师费计算器</text>
        <text class="page__desc">根据所在地区和案件类型自动计算律师费</text>
    </view>
    <form class="page__bd" catchsubmit="formSubmit" catchreset="formReset">
        <view class="section">
            <view class="section__title">所在地区</view>
            <picker name="area" value="{{areaindex}}" range="{{area_array}}" show-value bindchange="bindAreaPickerChange">
                <view class="picker">
                    当前选择：{{area_array[areaindex]}}
                </view>
            </picker>
        </view>
        <view class="section">
            <view class="section__title">案件类型</view>
            <picker name="casetype"  value="{{casetypeindex}}" range="{{casetype_array}}" show-value bindchange="bindCasetypePickerChange">
                <view class="picker">
                    当前选择：{{casetype_array[casetypeindex]}}
                </view>
            </picker>
        </view>
        <view class="section">
          <view class="section__title">诉讼标的(元)</view>
                <input name="matter" type="digit" placeholder="请输入诉讼标的"/>
            </view>
        
           <view class="btn-area">
            <button formType="submit">计算</button>
            <button formType="reset">重置</button>
        </view>
    </form>
    <view class="section" wx:if="{{result}}">
    <view class="section__title">计算结果</view>
                <text class="section__title">律师费:{{area + casetype + matter * 0.1 }}</text>
    
    
    </view>

</view>